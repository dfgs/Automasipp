{
  "urls": "https://*:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Debug",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "File": {
      "Path": "/var/log/Automasipp/Automasipp.log",
      "Append": true,
      "MinLevel": "Debug", // min level for the file logger
      "FileSizeLimitBytes": 10000, // use to activate rolling file behaviour
      "MaxRollingFiles": 10 // use to specify max number of log files
    }

  },
  "AllowedHosts": "*",
  "ScenariosFolder": "/opt/sipp/Scenarios",
  "SessionsFolder": "/opt/sipp/Sessions",
  "ReportsFolder": "/opt/sipp/Scenarios",
  "SippFolder": "/opt/sipp/"
}
